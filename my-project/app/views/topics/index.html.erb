<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>

      <tr>
        
        <td><%= link_to topic.title, topic %></td>
        <%#<td><%= topic.description %>
        <td><%= topic.votes.count %></td>
        <td><%= button_to '投我',upvote_topic_path(topic),method: :post %></td>
        <%#<td><%= link_to 'Show', topic %>
        <%#<td><%= link_to 'Edit', edit_topic_path(topic) %>
        <td><%= link_to '删除', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

